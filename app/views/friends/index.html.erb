<% if user_signed_in? %>

  <h1>Friends List</h1>

  <table class="table table-dark table-striped mt-5">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Email</th>
        <th scope="col">Phone</th>
        <th scope="col">Twitter</th>
        <th scope="col" colspan="3"></th>
      </tr>
    </thead>

    <% @friends.each do |friend| %>
      <tbody>
        <% if user_signed_in? && friend.user_id == current_user.id %>
          <td>
            <%= link_to friend.first_name + ' ' + friend.last_name, friend %>
            <!--De esta manera puedes concatenar para que los campos sean clickeables-->
            <!--y te manden a la pagina que corresponde, como si fuera un boton show-->
          </td>
          <td><%= friend.email %></td>
          <td><%= friend.phone %></td>
          <td><%= friend.twitter %></td>
          <td><%= link_to 'Show', friend, class: "btn btn-primary" %></td>
          <td>
            <%= link_to 'Edit', edit_friend_path(friend), class: "btn btn-warning", style: "color:white" %>
          </td>
          <td>
            <%= button_to 'Delete', friend, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
          </td>
        <% end %>
      </tbody>
    <% end %>

  </table>

  <!--
<%= link_to 'Add New Friend', new_friend_path, class:"btn btn-secondary" %>
-->

<% else %>
  <h1>hello world</h1>

<% end %>
